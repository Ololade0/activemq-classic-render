<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN"
        "http://jetty.mortbay.org/configure.dtd">

<Configure id="Server" class="org.mortbay.jetty.Server">
    <Call name="addConnector">
        <Arg>
            <New class="org.mortbay.jetty.nio.SelectChannelConnector">
                <Set name="port">8161</Set>
            </New>
        </Arg>
    </Call>

    <Set name="handler">
        <New id="Contexts" class="org.mortbay.jetty.handler.ContextHandlerCollection">
            <Set name="handlers">
                <Array type="org.mortbay.jetty.Handler">
                    <Item>
                        <New class="org.mortbay.jetty.webapp.WebAppContext">
                            <Set name="contextPath">/admin</Set>
                            <Set name="resourceBase"><SystemProperty name="activemq.home" default="."/>/webapps/admin</Set>
                            <Set name="defaultsDescriptor"><SystemProperty name="activemq.home" default="."/>/etc/webdefault.xml</Set>
                            <Set name="extractWAR">false</Set>
                        </New>
                    </Item>
                </Array>
            </Set>
        </New>
    </Set>
</Configure>
